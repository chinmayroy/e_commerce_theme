<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Cities form view -->
        <record id="cy_cities_form_view" model="ir.ui.view">
            <field name="name">cy.cities.form.view</field>
            <field name="model">cy.cities</field>
            <field name="arch" type="xml">
                <form string="Cities">
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <group>
                            <field name="country_id"/>
                            <field name="state_id"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Cities list or tree view -->
        <record id="cy_cities_tree_view" model="ir.ui.view">
            <field name="name">cy.cities.tree.view</field>
            <field name="model">cy.cities</field>
            <field name="arch" type="xml">
                <tree string="Cities">
                    <field name="country_id"/>
                    <field name="state_id"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- Cities Action for city submenu -->
        <record id="popular_products_action" model="ir.actions.act_window">
            <field name="name">Cities</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cy.cities</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No Cities yet!
              </p><p>
                Please add a new city!
              </p>
            </field>
        </record>

        <!-- E-commerce Theme Root Menu -->
        <menuitem id="e_commerce_theme_root_menu"
        name="E-commerce Theme"
        sequence="85"
        parent="website.menu_website_configuration"/>

        <!-- Popular Products Submenu -->
        <menuitem id="cy_cities_menu"
        name="Products"
        sequence="1"
        parent="e_commerce_theme_root_menu"
        action="e_commerce_theme.popular_products_action"/>
    </data>
</odoo>