<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Product Category Kanban View -->
        <record id="product_category_view_kanban_view" model="ir.ui.view">
            <field name="name">product.category.view.kanban</field>
            <field name="model">product.category.view</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban" string="Product Category">
                    <field name="category_name"/>
                    <field name="description"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_content oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="category_name"/>
                                    </strong>
                                    <ul>
                                        <li>
                                            <p>Related Category:
                                                <field name="related_category"/>
                                            </p>
                                        </li>
                                        <li>
                                            <p>Description:
                                                <field name="description"/>
                                            </p>
                                        </li>
                                    </ul>
                                </div>
                                <div class="oe_kanban_details">
                                    <field name="image"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Product Category Form View -->
        <record id="product_category_view_form_view" model="ir.ui.view">
            <field name="name">product.category.view.form.view</field>
            <field name="model">product.category.view</field>
            <field name="arch" type="xml">
                <form string="Product Category">
                    <sheet>
                        <group>
                            <group>
                                <field name="category_name"/>
                                <field name="related_category"/>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="image" widget="image" class="oe_avatar"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Product Category List or Tree View -->
        <record id="product_category_view_tree_view" model="ir.ui.view">
            <field name="name">product.category.view.tree.view</field>
            <field name="model">product.category.view</field>
            <field name="arch" type="xml">
                <tree string="Product Category">
                    <field name="category_name"/>
                    <field name="related_category"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- Product Category Action for submenu -->
        <record id="product_category_view_action" model="ir.actions.act_window">
            <field name="name">Product Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.category.view</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Product Category yet!
                </p>
                <p>
                    Please add a new Category!
                </p>
            </field>
        </record>
    </data>
</odoo>