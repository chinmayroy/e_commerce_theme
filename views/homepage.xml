<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="custom_homepage" inherit_id="website.homepage" name="Home">
        <xpath expr="//t[@t-call='website.layout']" position="replace">
            <t t-call="website.layout">
                <t t-set="pageName" t-value="'homepage'"/>
                <div class="oe_structure"/>
                <div id="wrap">

                    <!--Find Your Product Section-->
                    <section style="background-image: linear-gradient(0.3turn, #71639e, #01bad2, #71639e);" class="s_cover parallax bg-primary pt80 pb80" data-scroll-background-ratio="1">
                        <div class="container s_allow_columns">
                            <p class="lead" style="text-align: left;">
                                <strong>Find Your Desired Products.</strong>
                                <br/>
                                Lorem ipsum is placeholder text commonly used in
                                the graphic, print, and publishing industries for<br/>previewing layouts and visual
                                mockups.
                            </p>
                        </div>
                    </section>

                    <section class="s_cover parallax bg-black-50 pt96 pb96" data-scroll-background-ratio="1">
                        <span class="s_parallax_bg oe_img_bg"
                              style="background-image: url('/e_commerce_theme/static/src/img/contact-bg.jpg');"/>
                        <div class="container s_allow_columns">
                            <div class="row">
                                <div class="col-lg-6">
                                    <h2 class="h1">We help you find your<br class="d-none d-lg-block"/>New Product
                                    </h2>
                                    <p class="pr-5">Lorem ipsum is placeholder text commonly used in the graphic, print,
                                        and publishing industries for previewing layouts and visual mockups.
                                    </p>
                                    <p>
                                        <a href=""
                                           class="btn btn-primary mb-2 mt-3 rounded-circle px-5 font-weight-medium">
                                            Learn More
                                        </a>
                                    </p>
                                </div>
                                <div class="col-lg-6 o_cc1 p-5 rounded">
                                    <form>
                                        <div class="form-group">
                                            <label for="name">Your name</label>
                                            <input type="text" class="form-control" id="name"
                                                   placeholder="Eg. Alfer Jay"/>
                                        </div>
                                        <div class="form-group">
                                            <label for="email">Your email</label>
                                            <input type="email" class="form-control" id="email"
                                                   placeholder="Eg. youremail@ecommercetheme.com"/>
                                        </div>
                                        <div class="form-group">
                                            <label for="number">Your number</label>
                                            <input type="text" class="form-control" id="number"
                                                   placeholder="Eg. 0123456789"/>
                                        </div>

                                        <button type="submit" class="btn btn-primary w-100 mt-3 font-weight-medium">
                                            Submit
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </t>
        </xpath>
    </template>
</odoo>